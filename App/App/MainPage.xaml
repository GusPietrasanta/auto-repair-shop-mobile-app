<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.MainPage">

    <StackLayout>
           <StackLayout Margin="20">
                  <Label Text="Auto Repair Shop" TextColor="Black" FontSize="Title" HorizontalOptions="Center"
                         VerticalOptions="CenterAndExpand"></Label>
                  <Label Text="Login" FontSize="Title" TextColor="Black" HorizontalOptions="Center"
                         VerticalOptions="CenterAndExpand"></Label>
           </StackLayout>
        
        <StackLayout Margin="20">
               <Label Text="Username:"
                      HorizontalOptions="Center"
                      VerticalOptions="CenterAndExpand" />
               <Entry x:Name="UsernameEntry"></Entry>
        </StackLayout>
        
           <StackLayout Margin="20">
                  <Label Text="Password:"
                         HorizontalOptions="Center"
                         VerticalOptions="CenterAndExpand" />
                  
                  <Entry x:Name="PasswordEntry" IsPassword="True"></Entry>
                  </StackLayout>
           <Button Margin="20" Text="Log In" BackgroundColor="DodgerBlue" Clicked="LogInButton_OnClicked"></Button>
           
           

           
    </StackLayout>
       
       

</ContentPage>
